<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %> Something wrong</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
  <div class="task_title form-group">
    <%= form.label :Task_name %>
    <%= form.text_field :task_name, id: "task" , class: "form-control"%>
  </div>

  <div class="task_title form-group">
    <%= form.label :Description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="task_title form-group">
    <%= form.label :Priotity %>
    <%= form.select(:priority, options_for_select([['high','high'],['medium','medium'],['low','low']])) %>
  </div>
   <div class="task_title form-group">
    <%= form.label :Status %>
    <%= form.select :status, options_for_select([[''],['Not started'], ['In progress'], ['Completed']]), id: "status", class: "form-control"  %>
  </div>

  <div class="task_title form-group">
    <%= form.label :Deadline %>
    <%= form.date_select :deadline, id: "deadline", class: "form-control"%>
  </div>

  <%= form.submit value:"Register", class: "btn btn-primary submit"%>
</div>
<% end %>
<br>
<%= link_to "Back to the task list", tasks_path, class: "badge badge-success" %>
